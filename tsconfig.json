{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "commonjs",
    "target": "ES2021",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": [
    "typings/global.d.ts",
    "app.js",
    "app-routes.js",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": ["node_modules", "src/domain"],
  "references": [{ "path": "src/domain" }]
}
